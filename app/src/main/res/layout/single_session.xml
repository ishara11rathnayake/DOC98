<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:src="@drawable/ic_local_hospital_black_24dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Doctor Name"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/doctor_speciality"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Doctor Speciality"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/hospital_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Durdance"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-04-01 08.00"
                android:textSize="18sp"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="BOOK NOW"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:layout_gravity="right"
                android:textSize="16sp"
                android:onClick="bookNow"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/session_id"/>


        </LinearLayout>

</LinearLayout>